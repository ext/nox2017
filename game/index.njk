<!DOCTYPE html>
<html class="no-js" lang="en">
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{{ pkg.name }}</title>
		<base href="/">
		<link rel="stylesheet" href="{{ files.css | assetUrl }}" />
	</head>
	<body ng-app="{{ pkg.name }}" ng-strict-di ng-controller="GameController as game">
		<main>
			<p class="paused" ng-show="!game.running"><span class="fa fa-pause"></span> Paused</p>
			<canvas ng-controller="MainController"></canvas>
		</main>

		<aside>
			<fieldset ng-init="cam.x = 0; cam.y = 0; cam.z = -25">
				<legend>Camera</legend>
				<label>X <input type="number" step="0.1" ng-model="cam.x"/></label>
				<label>Y <input type="number" step="0.1" ng-model="cam.y"/></label>
				<label>Z <input type="number" step="0.1" ng-model="cam.z"/></label>
			</fieldset>
			<fieldset ng-init="rot.x = 0; rot.y = 0; rot.z = 0">
				<legend>Rotation (euler)</legend>
				<label>X <input type="number" step="0.1" ng-model="rot.x"/></label>
				<label>Y <input type="number" step="0.1" ng-model="rot.y"/></label>
				<label>Z <input type="number" step="0.1" ng-model="rot.z"/></label>
			</fieldset>
			<fieldset>
				<legend>Game</legend>
				<div class="button-group">
					<button class="button" type="button" ng-show=" game.running" ng-click="game.pause()"><span class="fa fa-pause"></span> Pause</button>
					<button class="button" type="button" ng-show="!game.running" ng-click="game.pause()"><span class="fa fa-play"></span> Continue</button>
					<button class="button" type="button" ng-show="!game.running" ng-click="game.stepFrame()"><span class="fa fa-step-forward"></span> Step</button>
				</div>
			</fieldset>
		</aside>

		<script src="{{ files.libs | assetUrl }}"></script>
		<script src="{{ files.js | assetUrl }}"></script>
		<script src="{{ 'js/data.min.js' | assetUrl }}"></script>
	</body>
</html>
